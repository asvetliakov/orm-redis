{
    "compilerOptions": {
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "es2016",
        "strictNullChecks": true,
        // "declaration": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "types": [
            "reflect-metadata",
            "jest"
        ],
        "typeRoots": [
            "node_modules/types",
            "types"
        ],
        "baseUrl": ".",
        "paths": {
            "sb-promisify": [
                "./types/sb-promisify"
            ]
        },
        "outDir": "./compiled"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "compiled"
    ]
}